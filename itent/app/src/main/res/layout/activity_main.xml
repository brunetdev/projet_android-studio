<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="fr.prepavenir.itent.ui.main.MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showActivity"
        android:layout_margin="10dp"
        android:text="LANCER UNE ACTIVITE" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showOtherApp"
        android:layout_margin="10dp"
        android:text="LANCER UNE AUTRE APPLICATION" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="showForm"
        android:text="FORM" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="CreateService"
        android:layout_margin="10dp"
        android:text="ARRETER LE SERVICE" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="DestroyService"
        android:layout_margin="10dp"
        android:text="ARRETER LE SERVICE" />
</LinearLayout>
